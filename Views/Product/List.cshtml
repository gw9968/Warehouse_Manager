@{
}
@model List<Warehouse_Manager.Models.Produkt>

<h1>Produkty</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Ilość</th>
            <th>Kategoria</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Nazwa</td>
                <td>@i.Cena</td>
                <td>@i.Ilosc</td>
                <td>@i.Kategoria</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@i.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary">
    <a class="btn btn-primary" asp-controller="Product" asp-action="AddProduct">Dodaj produkt</a>
</button>