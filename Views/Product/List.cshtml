@model List<Warehouse_Manager.Models.Produkt>

<h1>Produkty</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Ilość</th>
            <th>Kategoria</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Nazwa</td>
                <td>@i.Cena</td>
                <td>@i.Ilosc</td>
                <td>@i.Kategoria</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@i.Id">Edytuj</a>
                    <form asp-controller="Product" asp-action="Delete" asp-route-id="@i.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Na pewno chcesz usunąć ten przedmiot?');">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Product" asp-action="AddProduct">Dodaj produkt</a>
</div>
