@model Warehouse_Manager.Models.Pracownik

@{
    ViewData["Title"] = "Dodaj pracownika";
}

<div class="container mt-5">
    <h1>Dodaj pracownika</h1>

    <form asp-action="AddWorker" method="post" class="mt-3">
        <div class="form-group">
            <label for="Imie">Imię</label>
            <input asp-for="Imie" class="form-control" />
            <span asp-validation-for="Imie" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Nazwisko">Nazwisko</label>
            <input asp-for="Nazwisko" class="form-control" />
            <span asp-validation-for="Nazwisko" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Login">Login</label>
            <input asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Haslo">Hasło</label>
            <input asp-for="Haslo" class="form-control" type="password" />
            <span asp-validation-for="Haslo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Ddodaj pracownika</button>
        <a href="@Url.Action("ManageWorkers", "Admin")" class="btn btn-secondary mt-3">Anuluj</a>
    </form>
</div>
