@model Warehouse_Manager.Models.Produkt

@{
    ViewData["Title"] = "Dodaj produkt";
}

<div class="container mt-5">
    <h1>Dodaj produkt</h1>

    <form asp-action="AddProduct" method="post" class="mt-3">
        <div class="form-group">
            <label for="Nazwa">Nazwa</label>
            <input asp-for="Nazwa" class="form-control" />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Cena">Cena</label>
            <input asp-for="Cena" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Cena" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Ilosc">Ilość</label>
            <input asp-for="Ilosc" class="form-control" type="number" />
            <span asp-validation-for="Ilosc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Kategoria">Kategoria</label>
            <input asp-for="Kategoria" class="form-control" />
            <span asp-validation-for="Kategoria" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Dodaj produkt</button>
        <a href="@Url.Action("ManageProducts", "Worker")" class="btn btn-secondary mt-3">Anuluj</a>
    </form>
</div>
