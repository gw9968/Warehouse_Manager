@model List<Warehouse_Manager.Models.Pracownik>

<h1>Pracownicy</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Login</th>
            <th>Haslo</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Imie</td>
                <td>@i.Nazwisko</td>
                <td>@i.Login</td>
                <td>@i.Haslo</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Worker" asp-action="Edit" asp-route-id="@i.Id">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Worker" asp-action="AddWorker">Dodaj pracownika</a>
</div>
