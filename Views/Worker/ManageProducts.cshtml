@model IEnumerable<Warehouse_Manager.Models.Produkt>

@{
    ViewData["Title"] = "Zarządzaj produktami";
}

<div class="container mt-5">
    <h1>Zarządzaj produktami</h1>

    <a href="@Url.Action("AddProduct", "Worker")" class="btn btn-primary mb-3">Dodaj produkt</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Kategoria</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Nazwa</td>
                    <td>@product.Cena</td>
                    <td>@product.Ilosc</td>
                    <td>@product.Kategoria</td>
                    <td>
                        <a href="@Url.Action("DeleteProduct", "Worker", new { id = product.Id })" class="btn btn-danger">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
